<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="250dp"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_basic_shape"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/iv_image_dialog_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="25dp"
        android:background="@drawable/order_finish"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/tv_image_dialog_mes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_normal" />

    <View style="@style/divider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:divider="@drawable/divider_line_vertical"
        android:orientation="horizontal"
        android:showDividers="middle"
        tools:ignore="UselessLeaf" >

        <Button
            android:id="@+id/btn_image_dialog_give_up"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/white_selector"
            android:gravity="center"
            android:text="@string/give_up"
            android:textColor="@color/black"
            tools:ignore="ButtonStyle" />

        <Button
            android:id="@+id/btn_image_dialog_firm"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/white_selector"
            android:gravity="center"
            android:text="@string/firm"
            android:textColor="@color/main_color"
            tools:ignore="ButtonStyle" />
    </LinearLayout>

</LinearLayout>