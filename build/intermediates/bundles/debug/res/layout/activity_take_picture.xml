<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rlv_take_picture"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="@dimen/normal_size" >

    <Button
        android:id="@+id/cancel_btn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_hight"
        android:layout_alignParentBottom="true"
        android:background="@drawable/white_corner_selector"
        android:text="@string/cancel"
        android:textColor="@color/red"
        android:textSize="@dimen/normal_size" />

    <Button
        android:id="@+id/pic_choose_btn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_hight"
        android:layout_above="@+id/cancel_btn"
        android:layout_marginBottom="@dimen/mini_size"
        android:background="@drawable/white_bottom_corner_selector"
        android:text="@string/choose_picture_from_local"
        android:textColor="@color/main_color"
        android:textSize="@dimen/normal_size" />

    <Button
        android:id="@+id/camera_choose_btn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_hight"
        android:layout_above="@+id/pic_choose_btn"
        android:layout_marginBottom="1dp"
        android:background="@drawable/white_top_corner_selector"
        android:text="@string/take_picture"
        android:textColor="@color/main_color"
        android:textSize="@dimen/normal_size" />

</RelativeLayout>