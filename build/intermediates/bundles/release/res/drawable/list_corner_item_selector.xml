<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">

    <!-- 选中时的图片背景 -->
    <item android:state_pressed="true" tools:ignore="StateListReachable"><shape>

            <!-- 填充 -->
            <solid android:color="@color/white_selected" />
            <!-- 定义填充的颜色值 -->


            <!-- 边框 -->
            <stroke android:width="1px" android:color="@color/gray_light" />
            <!-- 设置边框宽度 颜色 -->


            <!-- 设置四个角的半径 -->
            <!-- 间隔 -->
            <corners android:radius="2dp" />
            <!-- 设置各个方向的间隔 -->

        </shape>
    </item>
    <!-- 默认时的背景图片 -->
    <item>
        <shape>

            <!-- 填充 -->
            <solid android:color="@color/white" />
            <!-- 定义填充的颜色值 -->
            <!-- 边框 -->
            <stroke android:width="1px" android:color="@color/gray_light" />
            <!-- 设置边框宽度 颜色 -->


            <!-- 设置四个角的半径 -->
            <!-- 间隔 -->
            <corners android:radius="2dp" />
            <!-- 设置各个方向的间隔 -->

        </shape>
    </item>

</selector>