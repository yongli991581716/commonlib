<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rlv_picker"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        tools:ignore="UselessParent" >

        <RelativeLayout
            android:id="@+id/rlv_operator"
            android:layout_width="match_parent"
            android:layout_height="@dimen/tab_height"
            android:background="@color/bg_area"
            android:gravity="center_vertical"
            tools:ignore="UselessLeaf" >

            <TextView
                android:id="@+id/tv_picker_cancel"
                style="@style/text_normal"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/normal_size"
                android:paddingRight="@dimen/normal_size"
                android:text="@string/cancel" />

            <TextView
                android:id="@+id/tv_picker_confirm"
                style="@style/text_normal"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/normal_size"
                android:paddingRight="@dimen/normal_size"
                android:text="@string/confirm"
                android:textColor="@color/main_color" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <com.common.lib.widget.NumberPicker
                android:id="@+id/np_one"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/picker_bg" />

            <com.common.lib.widget.NumberPicker
                android:id="@+id/np_two"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/picker_bg" />

            <com.common.lib.widget.NumberPicker
                android:id="@+id/np_three"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/picker_bg" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>